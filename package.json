{
  "name": "compiler-cv",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Open-source platform for building professional CVs with a real-time split-pane editor, LaTeX PDF generation, AI-powered ATS scoring, and multi-language support.",
  "license": "MIT",
  "author": {
    "name": "Vitor Plentz",
    "url": "https://github.com/Pl3ntz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pl3ntz/compiler-cv.git"
  },
  "homepage": "https://github.com/Pl3ntz/compiler-cv",
  "bugs": {
    "url": "https://github.com/Pl3ntz/compiler-cv/issues"
  },
  "keywords": [
    "cv",
    "resume",
    "builder",
    "latex",
    "pdf",
    "ats",
    "ai",
    "gemini",
    "react",
    "hono",
    "typescript",
    "open-source"
  ],
  "scripts": {
    "dev:client": "bunx vite",
    "dev:server": "bun --watch src/server/index.ts",
    "build": "bunx vite build",
    "build:pdf": "bun scripts/build-all.ts",
    "start": "bun src/server/index.ts",
    "spell": "cspell data/*.yaml || true",
    "validate": "bun scripts/validate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun scripts/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.42.0",
    "@tailwindcss/vite": "^4.1.0",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.0.0",
    "hono": "^4.7.0",
    "lucide-react": "^0.475.0",
    "p-queue": "^9.1.0",
    "postgres": "^3.4.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cspell/dict-pt-br": "^2.4.0",
    "@types/node": "^25.2.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "ajv": "^8.17.0",
    "cspell": "^8.17.0",
    "drizzle-kit": "^0.31.8",
    "ejs": "^3.1.10",
    "typescript": "^5.7.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.0",
    "yaml": "^2.6.0"
  }
}
